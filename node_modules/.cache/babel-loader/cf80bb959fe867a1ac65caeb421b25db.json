{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { v4 as uuidv4 } from 'uuid';\nimport { db } from \"../firebase\";\nimport { collection, getDocs } from \"firebase/firestore\";\nexport default {\n  data() {\n    return {\n      todos: [{\n        id: \"id1\",\n        content: \"John\",\n        done: false\n      }, {\n        id: \"id2\",\n        content: \"Alina\",\n        done: true\n      }],\n      newToDoContent: \"\"\n    };\n  },\n  mounted() {\n    this.test2();\n  },\n  methods: {\n    test2() {\n      const querySnapshot = getDocs(collection(db, \"todos\"));\n      querySnapshot.forEach(doc => {\n        console.log(doc.id, \" -> \", doc.data());\n      });\n    },\n    addTodo() {\n      const newToDo = {\n        id: uuidv4(),\n        content: this.newToDoContent,\n        done: false\n      };\n      console.log(\"new todo:\", newToDo);\n      this.todos.push(newToDo);\n      this.newToDoContent = \"  \";\n    },\n    deleteTodo(itemId) {\n      this.todos.splice(itemId, 1);\n    },\n    toggleDone(itemId) {\n      const newDone = !this.todos[itemId].done;\n      this.todos[itemId].done = newDone;\n    }\n  }\n};","map":{"version":3,"mappings":";AA6CA,SAAQA,EAAC,IAAKC,MAAK,QAAS,MAAM;AAClC,SAAQC,EAAE,QAAO,aAAa;AAC9B,SAASC,UAAU,EAAEC,OAAM,QAAS,oBAAoB;AAGxD,eAAe;EACXC,IAAI,GAAG;IACP,OAAO;MACHC,KAAK,EAAE,CAAC;QAACC,EAAE,EAAE,KAAK;QAAEC,OAAO,EAAE,MAAM;QAAEC,IAAI,EAAE;MAAK,CAAC,EAAC;QAACF,EAAE,EAAE,KAAK;QAAEC,OAAO,EAAE,OAAO;QAAEC,IAAI,EAAE;MAAI,CAAC,CAAC;MAC5FC,cAAc,EAAE;IAChB;EACJ,CAAC;EAACC,OAAO,GAAG;IACR,IAAI,CAACC,KAAK,EAAC;EACf,CAAC;EACDC,OAAO,EAAC;IACJD,KAAK,GAAE;MACH,MAAME,aAAY,GAAIV,OAAO,CAACD,UAAU,CAACD,EAAE,EAAE,OAAO,CAAC;MACrDY,aAAa,CAACC,OAAO,CAAEC,GAAG,IAAI;QAC1BC,OAAO,CAACC,GAAG,CAACF,GAAG,CAACT,EAAE,EAAE,MAAM,EAAES,GAAG,CAACX,IAAI,EAAE;MAC1C,CAAC;IACL,CAAC;IACDc,OAAO,GAAE;MACL,MAAMC,OAAM,GAAI;QACZb,EAAE,EAAEN,MAAM,EAAE;QACZO,OAAO,EAAE,IAAI,CAACE,cAAc;QAC5BD,IAAI,EAAE;MACP;MACAQ,OAAO,CAACC,GAAG,CAAC,WAAW,EAAEE,OAAO;M